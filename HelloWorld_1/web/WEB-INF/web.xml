<web-app>
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>com.servlet.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessUser</servlet-name>
        <servlet-class>com.servlet.ProcessUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessAdmin</servlet-name>
        <servlet-class>com.servlet.ProcessAdminServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/greeting</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessUser</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessAdmin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
</web-app>
